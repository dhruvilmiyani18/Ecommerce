<%- include('../header') %>

    <div class="main-container">
        <div class="pd-ltr-20 xs-pd-20-10">
            
                <!-- basic table  Start -->
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix mb-20">
                        <div class="pull-left">
                            <h4 class="text-blue h4">Admin Data Table</h4>
                          
                        </div>
                      
                    </div>

                    <form class=" text-center" style="margin-bottom: 20px;">
                            <input type="text" name="search">
                            <input type="submit" class="btn-primary border-radius"  value="searching">
                    </form>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">User Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Password</th>
                                <th scope="col">Contact Number</th>
                                <th scope="col">Admin Photo</th>
                                <th scope="col">City</th>
                                <th scope="col">Active/DeActive</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var d of record) { %>
                            <tr>
                                <td><%= d.name %></td>
                                <td><%= d.email %></td>
                                <td><%= d.password %></td>
                                <td><%= d.mnumber%></td>
                                <td><img src="<%= d.AdminImages %>" alt="" width="70px"></td>
                                <td><%= d.city %></td>
                                <td>
                                    <% if(d.isActive){ %>
                                        <a href="?active=<%= d.id %>" class="btn-success p-3 rounded">Active</a>
                                    <% } else { %>
                                        <a href="?deactive=<%= d.id %>" class="btn-danger p-3 rounded">DeActive</a>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/adminDelete/<%= d.id %>" class="btn-danger p-3 rounded">Delete</a>
                                   </td>
                                
                            </tr>
                           <% } %>

                           <tr>
                            <td>
                              <% for(var i=1; i<=totalPage; i++){ %>
                                <a href="?page=<%= i %>&search=<%= searchData %>"><%= i %></a>
                              <% } %>
                            </td>
                          </tr>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>